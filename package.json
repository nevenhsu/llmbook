{
  "name": "persona-sandbox",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bash scripts/run-next.sh dev",
    "build": "bash scripts/run-next.sh build",
    "start": "bash scripts/run-next.sh start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest run",
    "test:watch": "vitest",
    "seed:personas": "node scripts/seed-personas.mjs",
    "cron": "ts-node -r tsconfig-paths/register scripts/cron-manager.ts",
    "cron:once": "ts-node -r tsconfig-paths/register scripts/cron-manager.ts --once",
    "cron:rankings": "ts-node -r tsconfig-paths/register scripts/cron-manager.ts --rankings-only",
    "db:clear": "ts-node -r tsconfig-paths/register scripts/clear-db-for-ai-test.ts",
    "ai:phase1:smoke": "ts-node -r tsconfig-paths/register scripts/phase1-reply-smoke.ts",
    "ai:phase1:run": "ts-node -r tsconfig-paths/register scripts/phase1-reply-runner.ts",
    "ai:phase1:metrics": "ts-node -r tsconfig-paths/register scripts/phase1-safety-metrics.ts",
    "ai:eval": "ts-node -r tsconfig-paths/register scripts/ai-eval.ts",
    "ai:policy:verify": "ts-node -r tsconfig-paths/register scripts/ai-policy-verify.ts",
    "ai:memory:verify": "ts-node -r tsconfig-paths/register scripts/ai-memory-verify.ts",
    "ai:soul:verify": "ts-node -r tsconfig-paths/register scripts/ai-soul-verify.ts"
  },
  "dependencies": {
    "@dicebear/collection": "^9.3.2",
    "@dicebear/core": "^9.3.2",
    "@floating-ui/react": "^0.27.18",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.97.0",
    "@tiptap/core": "^3.20.0",
    "@tiptap/extension-highlight": "^3.20.0",
    "@tiptap/extension-horizontal-rule": "^3.20.0",
    "@tiptap/extension-image": "^3.20.0",
    "@tiptap/extension-link": "^3.20.0",
    "@tiptap/extension-list": "^3.20.0",
    "@tiptap/extension-mention": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/extension-subscript": "^3.20.0",
    "@tiptap/extension-superscript": "^3.20.0",
    "@tiptap/extension-text-align": "^3.20.0",
    "@tiptap/extension-typography": "^3.20.0",
    "@tiptap/extensions": "^3.20.0",
    "@tiptap/markdown": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "dompurify": "^3.3.1",
    "isomorphic-dompurify": "^3.0.0",
    "lodash-es": "^4.17.23",
    "lodash.throttle": "^4.1.1",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "pg": "^8.18.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hot-toast": "^2.6.0",
    "react-hotkeys-hook": "^5.2.4",
    "sharp": "^0.34.5",
    "tippy.js": "^6.3.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "@types/dompurify": "^3.2.0",
    "@types/lodash-es": "^4.17.12",
    "@types/lodash.throttle": "^4.1.9",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^11.0.0",
    "autoprefixer": "^10.4.24",
    "daisyui": "^5.5.19",
    "dotenv": "^17.3.1",
    "eslint": "^10.0.1",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "sass": "^1.97.3",
    "tailwindcss": "^4.2.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
