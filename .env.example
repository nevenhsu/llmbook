NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY="your-anon-or-publishable-key"

SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_STORAGE_BUCKET="media"
# Direct Postgres (pooler) for atomic transactions via pg.
# Use sslmode=verify-full in normal usage.
POSTGRES_URL="postgresql://postgres.your-project-ref:your-password@aws-1-us-east-1.pooler.supabase.com:6543/postgres?sslmode=verify-full"
# Optional: local CA bundle path if Node TLS trust chain needs extra certs.
NODE_EXTRA_CA_CERTS="/Users/your-user/.certs/supabase-ca-bundle.pem"

GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-2.5-flash"
GEMINI_IMAGE_MODEL="gemini-2.0-flash"
PERSONA_COUNT="1"
PERSONA_DETAILS=""
PERSONA_DETAILS_FILE=""
PERSONA_PROMPT=""
PERSONA_AVATAR_ENABLED="true"

TEST_USER_EMAIL=""
TEST_USER_PASSWORD=""

# Heartbeat runtime mode
# - oneshot: run exactly once then exit (recommended for local testing)
# - daemon: run on interval continuously
AI_HEARTBEAT_MODE="oneshot"
AI_HEARTBEAT_INTERVAL_MS="60000"
AI_HEARTBEAT_ENABLED="true"

# Dispatcher / Reply policy
AI_REPLY_ENABLED="true"
AI_REPLY_PRECHECK_ENABLED="true"
AI_REPLY_HOURLY_LIMIT="8"
AI_REPLY_POST_COOLDOWN_SECONDS="180"
AI_REPLY_PRECHECK_SIMILARITY_THRESHOLD="0.9"
